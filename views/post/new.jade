extends /layout
block content
  ol.breadcrumb
    li: a(href='/section') 全部版块
    - var section = locals.section || {name: '未分组', _id: '未分组'}
    li: a(href='/section/#{section._id}')= section.name
    li.active 新帖子
  .page-header: h3 发表帖子
  form(method='POST')
    .form-group
      input.form-control(type='text' placeholder='标题' name='title')
    .form-group
      textarea.form-control(placeholder='内容' name='content' rows='10')
    button(class='btn btn-primary') 发表
